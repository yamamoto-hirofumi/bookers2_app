
<main>
        <p id="notice"></p>
        <div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
    <%= form_with model:@user, local:true do |f| %>

      <div class="form-group">
        <label for="user_name">Name</label>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
      </div>
     <div class="form-group">
        <%= attachment_image_tag @user, :profile_image %>
        <label for="user_image">Image</label>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
      </div>
      <div class="form-group">
        <label for="user_introduction">Introduction</label>
        <%= f.text_area :introduction, autofocus: true, id: "user_introduction", placeholder: "Introduction" %>
      </div>
      <div class="form-group">
        <%= f.submit "Update User", {class: "btn btn-secondary"} %>
      </div>
     <% end %>
    </div>
   </div>
</main>

