
<main>
        <p id="notice"></p>
        <div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h2>User info</h2>
<% if @user.errors.any? %>
  <h3><%= @user.errors.count %>errors prohibited this book from being saved:</h3>
  <% @user.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_with model:@user, local:true do |f| %>
  <div class="form-group">
    <label for="user_name">Name</label><br>
    <%= f.text_field :name, autofocus: true, id:"inputName"%>
  </div>
  <div class="form-group">
    <label for="user_image">Image</label><br>
    <%= f.attachment_field :profile_image %>
  </div>
  <div class="form-group">
    <label for="user_introduction">Introduction</label><br>
    <%= f.text_area :introduction, autofocus: true, id: "user_introduction" %>
  </div>
  <div class="form-group">
    <%= f.submit "Update User", {class: "btn btn-secondary"} %>
  </div>
<% end %>

