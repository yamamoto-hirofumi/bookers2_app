<main>
        <p id="notice"></p>
<div class='container px-5 px-sm-0'>

<% if @book.errors.any? %>
  <h3><%= @book.errors.count %>errors prohibited this book from being saved:</h3>
  <ul><% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  </ul>
  <% end %>
<% end %>
  <div class='row'>


<%= render 'books/info', user: current_user, book: @book %>

<div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
             <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= attachment_image_tag book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "60x60" %></td>

            <td><%= link_to book.title, book_path(book.id) %></td>

            <td><span><%= book.body %></span></td>
          </tr>
          <% end %>
      </table>
 </div>
  </div>
</div>



